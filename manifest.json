{
  "manifest_version": 3,
  "name": "Podcast Creators: Assertion of Rights - Auto Helper",
  "short_name": "AssertionHelper",
  "version": "1.0.0",
  "author": "jeroenpeters1986@gmail.com",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "description": "Quickly resolve your Assertion of Rights questions for your Spotify for Creators podcast using a predefined solution.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://podcaster-assertion-of-rights.spotify.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://podcaster-assertion-of-rights.spotify.com/*"
      ],
      "js": [
        "spoar-helper.js"
      ]
    }
  ],
  "options_page": "options.html"
}
